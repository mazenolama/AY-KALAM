        private void button1_Click(object sender, EventArgs e)
        {
            using (OpenFileDialog m = new OpenFileDialog())//OpenFileDialog zy obj el Graphics lama 3mlna el beet lesa h4rha tho 
            {
                m.Filter = "Mp3 Files|*.mp3";
                if (m.ShowDialog() == DialogResult.OK)
                {
                    mp3Player.open(m.FileName);
                }
            }
        }

        private void button3_Click(object sender, EventArgs e)
        {
            mp3Player.play();//call method elplay 
        
        }

        private void button4_Click(object sender, EventArgs e)
        {
            mp3Player.stop();//call method elstop 
        }

